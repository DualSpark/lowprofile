
lowprofile(){
	# run the magic command
	PROMPT=$PROMPT ; PS1=$PS1 ; lowprofile-0.2 "$@"

	# refresh the shell if we are *activating
	describes=("ap" "activate-profile" "dp" "deactivate-profile" "pap" "activate-prompt" "pdp" "deactivate-prompt")
	for describe in ${describes[@]} ; do
		if [[ "$describe" == "$1" || "$describe" == "$2"  ]] ; then
			#clear the existing values
			unset AWS_PROFILE
			unset AWS_PROMPT_PREFIX
			unset AWS_PROMPT_SUFFIX

			if [ "$SHELL" = "/bin/bash" ] ; then
				login="--login"
			fi
			exec $SHELL $login
			return
		fi
	done
}

if [ "$SHELL" = "/bin/bash" ] ; then
	export -f lowprofile
fi
